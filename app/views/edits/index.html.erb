<p id="notice"><%= notice %></p>

<h1>Listing Edits</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Comment</th>
      <th>Is accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @edits.each do |edit| %>
      <tr>
        <td><%= edit.body %></td>
        <td><%= edit.user %></td>
        <td><%= edit.comment %></td>
        <td><%= edit.is_accepted %></td>
        <td><%= link_to 'Show', edit %></td>
        <td><%= link_to 'Edit', edit_edit_path(edit) %></td>
        <td><%= link_to 'Destroy', edit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

