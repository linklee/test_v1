<div class="scenario-step w-container">
	<p id="notice"><%= notice %></p>
	<div class="question-block">
		<p>
		  <strong class="q-title"><%= @question.title %></strong> –
		  <strong class="q-user"><%= "#{@question.user.name} #{@question.user.last_name}" %></strong>
		  <%= time_ago_in_words(@question.created_at) + " назад" %>
		  <br><br>
		  <p class="q-body">
		  	<%= @question.body %>
		  </p>
		</p>
		<%= render "answers/answers_block" %>
		<%= render "answers/new_form" if user_signed_in?%>
	</div>

<%= link_to 'Задать вопрос', new_question_path%>
</div>
